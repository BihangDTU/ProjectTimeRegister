@model ProjectTimeManagement.Models.Customer

@{
    ViewBag.Title = "CustomerInfo";
}

<h2>Customer Information</h2>
<h3>@ViewBag.ProjectName</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayName("Email:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Tel:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayName("Address:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>

    <div class="form-group">
        <div style="text-align: left;" class="pad-top">
            <a href="@Url.Action("Index")" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="@Url.Action("EditCustomerInfo", new { id = Url.RequestContext.RouteData.Values["id"] })" class="btn btn-default btn-lg">
                 Edit <span class="glyphicon glyphicon-arrow-right"></span>
            </a>
        </div>
    </div>

</div>
