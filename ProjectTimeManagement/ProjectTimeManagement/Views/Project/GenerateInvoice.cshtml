@model ProjectTimeManagement.Models.DateRange

@{
    ViewBag.Title = "GenerateInvoice";
}

<h2>Generate Invoice</h2>
<h2></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select Time Period</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Start date:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*" @Html.TextBoxFor(model => model.RegisterTime, new { htmlAttributes = new { @class = "form-control datepicker"} })*@
                @Html.TextBoxFor(model => model.DateFrom, "{0:d}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("End date:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.RegisterTime, new { htmlAttributes = new { @class = "form-control datepicker" } })*@
                @Html.TextBoxFor(model => model.DateTo, "{0:d}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Details/" + Url.RequestContext.RouteData.Values["id"].ToString())" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back
                </a>
                <button type="submit" class="btn btn-success btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Create
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
