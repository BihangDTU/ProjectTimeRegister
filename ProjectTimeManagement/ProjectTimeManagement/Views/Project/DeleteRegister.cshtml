@model ProjectTimeManagement.Models.TimeTable

@{
    ViewBag.Title = "DeleteRegister";
}

<div class="alert alert-danger">
    Are you sure you want to delete the following Registers?
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.Label("Register date:")
            </div>
            <div class="col-xs-8 col-sm-9">
                @Html.DisplayFor(model => model.RegisterTime, "{0:d}")
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.Label("Name:")
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.RegisterName
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.Label("Hours:")
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Hours
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="pad-top">
                <button type="submit" class="btn btn-danger btn-lg margin-right">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
                <a href="@Url.Action("Details/" + Model.ProjectId)" class="btn btn-warning btn-lg">
                    <span class="glyphicon glyphicon-remove"></span> Cancel
                </a>
            </div>
        }


    </div>

</div>